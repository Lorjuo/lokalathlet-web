<dl class="dl-horizontal">
  <dt>Verein (Staffelname):</dt>
  <dd><%= @relay.club %></dd>

  <dt>Veranstaltung:</dt>
  <dd><%= @relay.eventname %></dd>

  <dt>Staffel-Starternummer:</dt>
  <dd><%= @relay.relaystarter %></dd>

  <dt>Staffel-Teamgröße:</dt>
  <dd><%= @relay.relaytmsize %></dd>

  <dt>Startzeit:</dt>
  <dd><%= @relay.relaystarttime %></dd>
</dl>

<%= link_to 'Bearbeiten', edit_relay_path(:id => @relay.relaystarter), :class => 'btn btn-default' %>
<%= link_to 'Übersicht', relays_path, :class => 'btn btn-default' %>
<%= link_to 'Neues Team', new_relay_path(:eventname => @relay.eventname), :class => 'btn btn-default' %>

<br />
<br />

<table class="table table-bordered table-striped datatable searchable">
  <thead>
  <tr>
    <th>Starternummer</th>
    <th>Name</th>
    <th>Geburtsjahr</th>
    <th>Geschlecht</th>
    <th>Staffel-Teilnehmer</th>
    <th>Transp.-Id</th>
    <th>Startzeit</th>
    <th>Additionals</th>
  </tr>
  </thead>

  <tbody>
  <% @relay.athlets.each do |athlet| %>
      <tr>
        <td><%= athlet.starter %></td>
        <td><%= athlet.name %></td>
        <td><%= athlet.birthday %></td>
        <td><%= athlet.sex %></td>
        <td><%= athlet.relaytm %></td>
        <td><%= athlet.transponderid %></td>
        <td><%= athlet.starttime %></td>
        <td><%= athlet.additionals %></td>
      </tr>
  <% end %>
  </tbody>
</table>


