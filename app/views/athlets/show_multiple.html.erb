<dl class="dl-horizontal">
  <dt>Club:</dt>
  <dd><%= @athlets.first.club %></dd>

  <dt>Event:</dt>
  <dd><%= @athlets.first.event %></dd>

  <dt>Relay Starter:</dt>
  <dd><%= @athlets.first.relaystarter %></dd>
</dl>

<% @athlets.each do |athlet| %>

  <dl class="dl-horizontal">
    <dt>Starter:</dt>
    <dd><%= athlet.starter %></dd>

    <dt>Firstname:</dt>
    <dd><%= athlet.firstname %></dd>

    <dt>Surname:</dt>
    <dd><%= athlet.surname %></dd>

    <dt>Birthday:</dt>
    <dd><%= athlet.birthday %></dd>

    <dt>Sex:</dt>
    <dd><%= athlet.sex %></dd>

    <dt>Relay Team Size:</dt>
    <dd><%= athlet.relaytmsize %></dd>

    <dt>Relay Team Member:</dt>
    <dd><%= athlet.relaytm %></dd>

    <dt>Transponder Id:</dt>
    <dd><%= athlet.transponderid %></dd>
  </dl>
<% end %>

